<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/choosing_background"
    tools:context="com.chatoyment.ahoyapp.AddCompetition">

    <Button
        android:id="@+id/buttonExitAdd"
        android:layout_width="47dp"
        android:layout_height="49dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="21dp"
        android:foreground="@drawable/x_icon"
        android:background="@color/transparent"
        android:onClick="exitAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="373dp"
        android:layout_height="615dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonExitAdd">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Toolbar
                android:id="@+id/ToolbarTitle"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="157dp"
                android:layout_marginEnd="157dp"
                android:alpha="0.5"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.508"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </Toolbar>

            <EditText
                android:id="@+id/competition_title_editText"
                android:layout_width="260dp"
                android:layout_height="43dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="101dp"
                android:background="@color/light_grey"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="24sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.465"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ToolbarTitle" />

            <Toolbar
                android:id="@+id/ToolbarOrganizer"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="157dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="157dp"
                android:alpha="0.5"
                android:background="@drawable/round_toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/competition_title_editText">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewOrganizer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:text="@string/organizer"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </Toolbar>

            <EditText
                android:id="@+id/competition_organizer_editText"
                android:layout_width="260dp"
                android:layout_height="43dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="101dp"
                android:background="@color/light_grey"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="24sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.465"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ToolbarOrganizer" />


            <Toolbar
                android:id="@+id/ToolbarReward"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="157dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="157dp"
                android:alpha="0.5"
                android:background="@drawable/round_toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/competition_organizer_editText">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewReward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reward"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </Toolbar>

            <EditText
                android:id="@+id/competition_reward"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="101dp"
                android:background="@color/light_grey"
                android:ems="10"
                android:inputType="textMultiLine"
                android:minHeight="43dp"
                android:textSize="24sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.465"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ToolbarReward" />


            <Toolbar
                android:id="@+id/ToolbarCompetitionDescription"

                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="157dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="157dp"
                android:alpha="0.5"
                android:background="@drawable/round_toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.513"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/competition_reward">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewAnnouncementDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginEnd="10dp"
                        android:text="@string/description"
                        android:textAlignment="center"
                        android:textColor="@color/black"

                        android:textSize="24sp"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </Toolbar>

            <EditText
                android:id="@+id/competition_description"
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:layout_marginStart="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="101dp"
                android:background="@color/light_grey"
                android:ems="10"
                android:inputType="textMultiLine"
                android:minHeight="189dp"
                android:textSize="24sp"
                android:visibility="visible"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ToolbarCompetitionDescription" />


            <Toolbar
                android:id="@+id/ToolbarCompetitionLocation"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:alpha="0.5"
                android:background="@drawable/round_toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/competition_description">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewCompetitionLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginEnd="10dp"
                        android:text="@string/competition_location"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </Toolbar>

            <Spinner
                android:id="@+id/competitionCountry"
                android:layout_width="168dp"
                android:layout_height="39dp"
                android:layout_marginTop="8dp"
                android:background="@color/light_grey"
                android:ems="10"
                android:hint="@string/country"
                android:popupBackground="@color/light_grey"
                android:spinnerMode="dropdown"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ToolbarCompetitionLocation" />


            <Toolbar
                android:id="@+id/ToolbarAnnouncementDuration"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="109dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="108dp"
                android:alpha="0.5"
                android:background="@drawable/round_toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.465"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/competitionCountry">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/textViewCompetitionDuration"
                        android:layout_width="288dp"
                        android:layout_height="63dp"

                        android:text="@string/how_long_should_competition_be_active"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </Toolbar>

            <EditText
                android:id="@+id/competition_duration_editText"
                android:layout_width="260dp"
                android:layout_height="43dp"
                android:layout_marginTop="10dp"
                android:background="@color/light_grey"
                android:ems="10"
                android:hint="@string/hours_from_now"
                android:inputType="number"
                android:maxLength="5"
                android:textSize="24sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ToolbarAnnouncementDuration" />

            <TextView
                android:id="@+id/duration_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/competition_duration_editText" />


            <Toolbar
                android:id="@+id/ToolbarCompetitionWhenResults"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="109dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="108dp"
                android:alpha="0.5"
                android:background="@drawable/round_toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.465"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/competition_duration_editText">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/textViewWhenResults"
                        android:layout_width="288dp"
                        android:layout_height="63dp"

                        android:text="@string/when_will_the_competition_results_be_announced"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </Toolbar>

            <EditText
                android:id="@+id/competition_when_results_editText"
                android:layout_width="260dp"
                android:layout_height="43dp"
                android:layout_marginTop="10dp"
                android:background="@color/light_grey"
                android:ems="10"
                android:inputType="text"
                android:textSize="24sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ToolbarCompetitionWhenResults" />

            <Toolbar
                android:id="@+id/ToolbarCompetitionWhoCanTakePart"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="109dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="108dp"
                android:alpha="0.5"
                android:background="@drawable/round_toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.465"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/competition_when_results_editText">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/textView_who_can_take_part"
                        android:layout_width="288dp"
                        android:layout_height="63dp"
                        android:text="@string/who_can_take_part_in_the_competition"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </Toolbar>

            <EditText
                android:id="@+id/competition_who_can_take_part_editText"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/light_grey"
                android:ems="10"
                android:inputType="textMultiLine"
                android:minHeight="43dp"
                android:textSize="24sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ToolbarCompetitionWhoCanTakePart" />

            <Toolbar
                android:id="@+id/ToolbarCompetitionWhereResults"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="109dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="108dp"
                android:alpha="0.5"
                android:background="@drawable/round_toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.465"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/competition_who_can_take_part_editText">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/textView_where_results"
                        android:layout_width="288dp"
                        android:layout_height="63dp"
                        android:text="@string/where_will_the_competition_results_be"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </Toolbar>

            <EditText
                android:id="@+id/competition_where_results_editText"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/light_grey"
                android:ems="10"
                android:inputType="textMultiLine"
                android:minHeight="43dp"
                android:textSize="24sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ToolbarCompetitionWhereResults" />


            <Toolbar
                android:id="@+id/ToolbarCompetitionAdditional"

                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="109dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="108dp"
                android:alpha="0.5"
                android:background="@drawable/round_toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/competition_where_results_editText">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/textViewCompetitionAdditionalInfo"
                        android:layout_width="288dp"
                        android:layout_height="63dp"

                        android:text="@string/additional_information"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </Toolbar>


            <EditText
                android:id="@+id/competition_additional_info"
                android:layout_width="260dp"
                android:layout_height="43dp"
                android:layout_marginTop="10dp"
                android:background="@color/light_grey"
                android:ems="10"
                android:hint="@string/link_rules"
                android:textSize="24sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ToolbarCompetitionAdditional" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/pink_transparent_round"
                android:backgroundTint="@color/pink_almost_transparent"
                android:onClick="addCompetition"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/add"
                android:textColor="@color/white"
                android:visibility="visible"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/competition_additional_info" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/done_animation"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_rawRes="@raw/done_animation"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/your_application_is_being_reviewed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_application_is_being_reviewed"
        android:textColor="@color/light_grey2"
        android:textSize="28dp"
        android:visibility="gone"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/done_animation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:textColor="@color/green"
        android:textSize="28sp"
        android:visibility="gone"
        android:alpha="1"
        android:backgroundTint="@color/pink"
        android:onClick="exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/done_animation" />

    <TextView
        android:id="@+id/competition_must_have_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/competition_must_have_title"
        />

    <TextView
        android:id="@+id/competition_must_have_organizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/competition_must_have_organizer"
        />

    <TextView
        android:id="@+id/competition_must_have_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/competition_must_have_reward"
        />

    <TextView
        android:id="@+id/competition_must_have_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/competition_must_have_description"
        />

    <TextView
        android:id="@+id/competition_must_last_at_least_an_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/competition_must_last_at_least_an_hour"
        />

    <TextView
        android:id="@+id/competition_must_have_information_when_the_results_will_be_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/competition_must_have_information_when_the_results_will_be_available"
        />

    <TextView
        android:id="@+id/competition_must_have_information_who_can_take_part_in_competition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/competition_must_have_information_who_can_take_part_in_competition"
        />

    <TextView
        android:id="@+id/competition_must_have_information_where_will_be_results_announced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/competition_must_have_information_where_will_be_results_announced"
        />

    <TextView
        android:id="@+id/success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/success"
        />


    <TextView
        android:id="@+id/check_internet_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="11dp"
        android:text="@string/check_internet_connection"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/error_caused_by_unstable_internet_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_caused_by_unstable_internet_connection"
