<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/settings_background"
    tools:context=".MapSettings">

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="47dp"
        android:layout_height="49dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="21dp"
        android:foreground="@android:drawable/ic_menu_close_clear_cancel"
        android:background="@color/transparent"
        android:onClick="exitSettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="410dp"
        android:layout_height="550dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonExit">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >


            <TextView
                android:id="@+id/map_type_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/map_type"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginTop="20dp"

                />

            <Spinner
                android:id="@+id/mapTypesSpinner"
                android:layout_width="238dp"
                android:layout_height="32dp"
                android:entries="@array/map_types_spinner"
                android:textSize="24sp"
                android:background="@color/light_grey"
                android:layout_marginTop="16dp"
                android:visibility="gone"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/light_grey" />

            <TextView
                android:id="@+id/auto_zoom_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/auto_zoom_to_your_location"
                android:textColor="@color/white"
                android:textSize="24sp"
                />
            <Switch
                android:id="@+id/auto_zoom_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/light_grey" />

            <TextView
                android:id="@+id/zoom_size_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zoom_size"
                android:textColor="@color/white"
                android:textSize="24sp"
                />

            <com.google.android.material.slider.Slider
                android:id="@+id/zoom_size_slider"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:stepSize="1"
                android:valueFrom="1"
                android:valueTo="25"
                android:visibility="gone"
                app:tickVisible="false"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/light_grey" />

        </LinearLayout>


    </ScrollView>


    <Button
        android:id="@+id/btnSaveSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="saveSettings"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

    <TextView
        android:id="@+id/on_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/on"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/off_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/off"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>