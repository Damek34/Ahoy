<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/choosing_background"
    tools:context="com.chatoyment.ahoyapp.AddAnnouncement">

    <Button
        android:id="@+id/buttonExitAdd"
        android:layout_width="47dp"
        android:layout_height="49dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="21dp"
        android:foreground="@drawable/x_icon"
        android:background="@color/transparent"
        android:onClick="exitAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView15"
        android:layout_width="373dp"
        android:layout_height="615dp"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonExitAdd">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Toolbar
                android:id="@+id/ToolbarCompany"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="157dp"
                android:layout_marginEnd="157dp"
                android:layout_marginTop="10dp"
                android:alpha="0.5"
                android:background="@drawable/round_toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.508"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewAnnouncementCompany"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:text="@string/company_name"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </Toolbar>

            <EditText
                android:id="@+id/announcement_company_name"
                android:layout_width="260dp"
                android:layout_height="43dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="101dp"
                android:background="@color/light_grey"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="24sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.465"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ToolbarCompany" />


            <Toolbar
                android:id="@+id/ToolbarAnnouncementDescription"

                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="157dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="157dp"
                android:alpha="0.5"
                android:background="@drawable/round_toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.513"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/announcement_company_name">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewAnnouncementDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginEnd="10dp"
                        android:text="@string/description"
                        android:textAlignment="center"
                        android:textColor="@color/black"

                        android:textSize="24sp"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </Toolbar>

            <EditText
                android:id="@+id/announcement_description"
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:layout_marginStart="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="101dp"
                android:background="@color/light_grey"
                android:ems="10"
                android:inputType="textMultiLine"
                android:minHeight="189dp"
                android:textSize="24sp"
                android:visibility="visible"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ToolbarAnnouncementDescription" />


            <Toolbar
                android:id="@+id/ToolbarEventLocation"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:alpha="0.5"
                android:background="@drawable/round_toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/announcement_description">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewEventLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginEnd="10dp"
                        android:text="@string/announcement_location"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </Toolbar>

            <Spinner
                android:id="@+id/announcementCountry"
                android:layout_width="168dp"
                android:layout_height="39dp"
                android:layout_marginTop="8dp"
                android:background="@color/light_grey"
                android:ems="10"
                android:hint="@string/country"
                android:popupBackground="@color/light_grey"
                android:spinnerMode="dropdown"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ToolbarEventLocation" />


            <Toolbar
                android:id="@+id/ToolbarAnnouncementDuration"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="109dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="108dp"
                android:alpha="0.5"
                android:background="@drawable/round_toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.465"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/announcementCountry">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/textViewAnnouncementDuration"
                        android:layout_width="288dp"
                        android:layout_height="63dp"

                        android:text="@string/how_long_should_announcement_be_active"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </Toolbar>


            <Toolbar
                android:id="@+id/ToolbarAnnouncementAdditionalInfo"

                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="109dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="108dp"
                android:alpha="0.5"
                android:background="@drawable/round_toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/announcement_duration">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/textViewAnnouncementAdditionalInfo"
                        android:layout_width="288dp"
                        android:layout_height="63dp"

                        android:text="@string/additional_information"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </Toolbar>

            <EditText
                android:id="@+id/announcement_duration"
                android:layout_width="260dp"
                android:layout_height="43dp"
                android:layout_marginTop="10dp"
                android:background="@color/light_grey"
                android:ems="10"
                android:hint="@string/hours_from_now"
                android:inputType="number"
                android:maxLength="5"
                android:textSize="24sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ToolbarAnnouncementDuration" />

            <TextView
                android:id="@+id/duration_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/announcement_duration" />

            <EditText
                android:id="@+id/announcement_additional_info"
                android:layout_width="260dp"
                android:layout_height="43dp"
                android:layout_marginTop="10dp"
                android:background="@color/light_grey"
                android:ems="10"
                android:hint="@string/links_etc"
                android:textSize="24sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ToolbarAnnouncementAdditionalInfo" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/pink_transparent_round"
                android:backgroundTint="@color/pink_almost_transparent"
                android:onClick="addAnnouncement"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/add"
                android:textColor="@color/white"
                android:visibility="visible"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/announcement_additional_info" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


    <TextView
        android:id="@+id/textViewMustHaveDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/event_must_have_a_desc"
        android:visibility="gone"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="4dp" />
    <TextView
        android:id="@+id/textViewMustHaveCompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/event_must_have_a_company_name"
        android:visibility="gone"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="4dp" />

    <TextView
        android:id="@+id/textViewMustLastAHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/event_must_have_a_name"
        android:visibility="gone"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="4dp" />

    <TextView
        android:id="@+id/add_announcementPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="11dp"
        android:text="@string/your_application_is_being_reviewed"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/check_internet_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="11dp"
        android:text="@string/check_internet_connection"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <TextView
        android:id="@+id/announcement_will_ends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="11dp"
        android:text="@string/announcement_will_ends"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/error_caused_by_unstable_internet_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_caused_by_unstable_internet_connection"
        android:visibility="gone"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="4dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:onClick="statute"
        android:text="@string/terms_of_service"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView15" />
</androidx.constraintlayout.widget.ConstraintLayout>